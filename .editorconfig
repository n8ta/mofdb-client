# EditorConfig is awesome: https://EditorConfig.org
# Include your project-specific coding styles in this file
# Read about how to use .editorconfig: https://editorconfig-specification.readthedocs.io/
# Some real-world projects using .editorConfig files: https://github.com/editorconfig/editorconfig/wiki/Projects-Using-EditorConfig

root = true

[*]
charset = utf-8
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
indent_size = 4
max_line_length = 119

[*.rst]
end_of_line = lf
indent_size = 3

[*.md]
end_of_line = lf
indent_size = 4
